extends layout

block head
  link(rel='stylesheet', href='/stylesheets/index.css')
  //meta(http-equiv='refresh', content='5')
    
block content

  // Top navigation
  header.bar.bar-nav
    //
      button.btn.btn-link.btn-nav.pull-left
        span.icon.icon-left-nav
        | Back

    h1.title MFP Job Insights

    //
      button.btn.btn-link.btn-nav.pull-right Next
        span.icon.icon-right-nav

  // Center Content
  div.content
    div.content-padded
      div.jumbotron
        h1.copy-heading What job is right for you?
        p.copy-subtitle Chart your own journey...

      form
        input(type='text' placeholder='Enter Your Name')#name-field

      button.btn.btn-block.btn-primary.start-button#onward-button
        | Onward!!! -->

      div.notification#name-presence-notification
        | Please enter a name to start explorer!

      img(src='/images/little-guy.svg')#landing-image
      
block foot
  script(type='text/javascript', src='/javascripts/index.js')